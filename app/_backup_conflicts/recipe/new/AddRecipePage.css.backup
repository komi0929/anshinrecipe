.add-recipe-page {
    padding-bottom: 100px;
}

.page-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
}

.back-button {
    padding: 8px;
    color: var(--color-text-sub);
    background: #F3F4F6;
    border-radius: 50%;
    transition: all 0.2s;
}

.back-button:hover {
    background: #E5E7EB;
}

.page-title {
    font-size: 24px;
    font-weight: bold;
    color: var(--color-text-main);
}

/* Form Sections */
.recipe-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.form-section {
    background: white;
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.url-section {
    border: 2px solid #FDBA74;
    background: linear-gradient(135deg, #FFF7ED 0%, #FFFFFF 100%);
}

.section-label {
    display: block;
    font-size: 16px;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 8px;
}

.section-help {
    font-size: 14px;
    color: #6B7280;
    margin-bottom: 12px;
}

.required {
    color: #DC2626;
}

/* URL Input Group */
.url-input-group {
    display: flex;
    gap: 12px;
    align-items: flex-start;
}

.url-input-group .input-with-icon {
    flex: 1;
}

.fetch-ogp-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: #FDBA74;
    color: white;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    white-space: nowrap;
    transition: all 0.2s;
}

.fetch-ogp-btn:hover:not(:disabled) {
    background: #FB923C;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(251, 146, 60, 0.3);
}

.fetch-ogp-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

/* Form Inputs */
.form-group {
    margin-bottom: 16px;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-group label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
}

.input-with-icon {
    position: relative;
    display: flex;
    align-items: center;
}

.input-with-icon svg {
    position: absolute;
    left: 12px;
    color: #9CA3AF;
}

.input-with-icon .form-input {
    padding-left: 40px;
}

.form-input {
    width: 100%;
    padding: 12px 16px;
    font-size: 15px;
    border: 2px solid #E5E7EB;
    border-radius: 12px;
    background: #F9FAFB;
    transition: all 0.2s;
}

.form-input:focus {
    outline: none;
    border-color: #FDBA74;
    background: white;
    box-shadow: 0 0 0 3px rgba(253, 186, 116, 0.1);
}

.form-textarea {
    width: 100%;
    padding: 12px 16px;
    font-size: 15px;
    border: 2px solid #E5E7EB;
    border-radius: 12px;
    background: #F9FAFB;
    font-family: inherit;
    resize: vertical;
    transition: all 0.2s;
}

.form-textarea:focus {
    outline: none;
    border-color: #FDBA74;
    background: white;
    box-shadow: 0 0 0 3px rgba(253, 186, 116, 0.1);
}

.field-hint {
    font-size: 12px;
    color: #9CA3AF;
    margin-top: 6px;
}

/* Image Section */
.image-section {
    margin-top: 16px;
}

.image-section label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
}

.image-preview-container {
    display: flex;
    gap: 16px;
    align-items: flex-start;
}

.image-preview {
    flex: 1;
    border-radius: 12px;
    overflow: hidden;
    max-width: 300px;
    border: 2px solid #E5E7EB;
}

.image-preview img {
    width: 100%;
    height: auto;
    display: block;
}

.image-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.change-image-btn,
.remove-image-btn {
    padding: 10px 16px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.2s;
    white-space: nowrap;
}

.change-image-btn {
    background: #FDBA74;
    color: white;
}

.change-image-btn:hover {
    background: #FB923C;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(251, 146, 60, 0.3);
}

.remove-image-btn {
    background: #F3F4F6;
    color: #6B7280;
}

.remove-image-btn:hover {
    background: #FEE2E2;
    color: #DC2626;
}

/* Children Selection */
.children-selection {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 12px;
}

.child-select-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #F9FAFB;
    border: 2px solid #E5E7EB;
    border-radius: 12px;
    transition: all 0.2s;
    cursor: pointer;
}

.child-select-card:hover {
    background: #F3F4F6;
    border-color: #D1D5DB;
}

.child-select-card.selected {
    background: #FFF7ED;
    border-color: #FDBA74;
    box-shadow: 0 0 0 3px rgba(253, 186, 116, 0.1);
}

.child-select-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FED7AA 0%, #FDBA74 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    flex-shrink: 0;
    overflow: hidden;
}

.child-select-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.child-select-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.child-select-name {
    font-size: 15px;
    font-weight: 600;
    color: #1F2937;
}

.child-select-allergens {
    font-size: 12px;
    color: #6B7280;
}

.check-icon {
    color: #FDBA74;
    flex-shrink: 0;
}

/* Scene Selection */
.scene-selection {
    display: flex;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.2s;
}

.add-btn:hover {
    background: #E5E7EB;
    color: #374151;
}

/* Tags */
.tags-container {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.tag-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: #E0F2FE;
    color: #0284C7;
    border-radius: 16px;
    font-size: 13px;
    font-weight: 600;
}

.tag-chip button {
    color: #0284C7;
    font-size: 18px;
    line-height: 1;
    padding: 0 4px;
    transition: color 0.2s;
}

.tag-chip button:hover {
    color: #0369A1;
}

.tag-input-wrapper {
    display: flex;
    gap: 8px;
}

.tag-input-wrapper .form-input {
    flex: 1;
}

/* Submit Button */
.submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    padding: 16px;
    background: #FDBA74;
    color: white;
    border-radius: 16px;
    font-size: 16px;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(253, 186, 116, 0.4);
    transition: all 0.2s;
}

.submit-btn:hover:not(:disabled) {
    background: #FB923C;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(251, 146, 60, 0.4);
}

.submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.animate-spin {
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

/* Responsive */
@media (max-width: 640px) {
    .url-input-group {
        flex-direction: column;
    }

    .fetch-ogp-btn {
        width: 100%;
        justify-content: center;
    }

    .children-selection {
        grid-template-columns: 1fr;
    }

    .image-preview-container {
        flex-direction: column;
    }

    .image-actions {
        width: 100%;
    }

    .change-image-btn,
    .remove-image-btn {
        width: 100%;
    }
}